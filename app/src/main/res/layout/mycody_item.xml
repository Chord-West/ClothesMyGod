<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:background="@drawable/cody_wrap"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/codylist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코디 이름"
            android:textSize="18sp"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cody_top_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/cody_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:text="Contents"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cody_bottom_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/cody_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:text="Contents"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cody_shoes_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/cody_shoes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:text="Contents"/>
    </LinearLayout>
    <Button
        android:id="@+id/codylist_delete_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:background="@drawable/register_button"
        android:text="삭제"
        android:textSize="12sp"
        />
</LinearLayout>