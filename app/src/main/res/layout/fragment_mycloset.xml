<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내옷장"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_weight="3"
            />
        <Button
            android:id="@+id/mycloset_post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옷등록"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mycloset_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="전체"/>
        <Button
            android:id="@+id/mycloset_top_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="상의"/>
        <Button
            android:id="@+id/mycloset_bottom_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="하의"/>
        <Button
            android:id="@+id/mycloset_shoes_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="신발"/>

    </LinearLayout>
    <GridView
        android:id="@+id/mycloset_gridview"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:listitem="@layout/mycloset_card_item"/>
