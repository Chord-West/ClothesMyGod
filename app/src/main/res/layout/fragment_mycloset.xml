<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F5ECFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내옷장"
            android:textSize="30sp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3BCE4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mycloset_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="전체"/>
        <Button
            android:id="@+id/mycloset_top_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="상의"/>
        <Button
            android:id="@+id/mycloset_bottom_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="하의"/>
        <Button
            android:id="@+id/mycloset_shoes_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="신발"/>
    </LinearLayout>
    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <GridView
        android:id="@+id/mycloset_gridview"
        android:columnWidth="100dp"
        android:paddingStart="9dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="18dp"
        android:numColumns="auto_fit"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        tools:listitem="@layout/mycloset_card_item" />
</FrameLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right">
        <ImageButton
            android:id="@+id/mycloset_post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F5ECFF"
            android:src="@drawable/plus" />
    </LinearLayout>
</LinearLayout>
